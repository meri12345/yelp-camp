<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-3">
			<p>YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>	
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-fluid" src="<%= camp.image%>">
				<div class="figure-caption">
					<h4 class="float-right">9.00$/night</h4>
				</div>
				<h3><a><%=camp.name%></a></h3>
				<p><%=camp.desc%></p>
			</div>
			<div class="card card-body bg-light">
				<div class="text-right">
					<a href="/campgrounds/<%=camp._id%>/comments/new" class="btn btn-lg btn-outline-primary">Add new comment</a>
				</div>
				<hr>
					<% for(el of camp.comments) {%>
						<div class="row">
							<div class="col-md-12">
								<p><strong><%=el.author%></strong></p>
								<p><%=el.text%></p>
								<hr>
							</div>
						</div>
					<%}%>
			</div>
			
		</div>
	</div>
</div>


<%- include("../partials/footer") %>