<%- include("../partials/header") %>

<div class="container">
	<div class="row justify-content-center">
		
		<div class="col-12 text-center">
			<h4>Create New Comment to <%=camp.name%>:</h4>
		</div>	
			<div class="col-6 mt-4">
				
				<form action="/campgrounds/<%=camp._id%>/comments" method="POST">
					<div class="form-group">
						<input class="form-control"type="text" 	placeholder="Author" name="comment[author]">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" placeholder="Comment" name="comment[text]">
					</div>			
					<div class="form-group">
						
					<button class="btn btn-lg btn-primary btn-block">
					Submit
					</button>
				</div>	
				
				<a href="/campgrounds/<%=camp._id %>>">Go Back</a>

			</form>
				
			</div>
		
	</div>
		
</div>


<%- include("../partials/footer") %>